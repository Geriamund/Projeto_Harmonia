            {
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="DiasRepetir" value="@dia" id="dia-@dia" />
                    <label class="form-check-label" for="dia-@dia">@dia.ToString().Substring(0, 1)</label>
                </div>
            }
